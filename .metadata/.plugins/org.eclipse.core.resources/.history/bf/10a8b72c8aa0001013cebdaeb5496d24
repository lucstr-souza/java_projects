package apresentacao;

import javax.swing.ButtonGroup;
import javax.swing.DefaultListModel;
import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JList;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;
import javax.swing.JRadioButton;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;
import javax.swing.JTextField;

import negocio.ControladorNovo;

public class Visao extends JFrame { 	//Primeiro passo
	//Propriedade da classe -- indicador único da classe -- específico -- Segundo passo
	private static final long serialVersionUID = 1L;
	
	//Propriedades da classe -- todas as outras classes que precisem ser usadas -- Terceiro passo
	private JMenuBar barraDeMenu = new JMenuBar();
	private JMenu mnuArquivo = new JMenu("Arquivo");
	private JMenu mnuEditar = new JMenu("Editar");
	private JMenuItem mniNovo = new JMenuItem("Novo");
	private JMenuItem mniAbrir = new JMenuItem("Abrir");
	private JMenuItem mniSair = new JMenuItem("Sair");
	private JMenuItem mniCopiar = new JMenuItem("Copiar");
	private JMenuItem mniColar = new JMenuItem("Colar");
	
	//Criar botão
	private JButton btnSair = new JButton("Sair"); 
	
	//Criar Caixa de texto -- usado para informações pequenas ex: cpf
	private JLabel lblCaixaDeTexto = new JLabel("Caixa de Texto");
	private JTextField txtCaixaDeTexto = new JTextField();
	
	//Criar area de texto -- caixa dentro da barra
	private JLabel lblAreaDeTexto = new JLabel("Área de Texto");
	private JTextArea txtAreaDeTexto = new JTextArea();
	private JScrollPane jspAreaDeTexto = new JScrollPane(txtAreaDeTexto);
	
	//Criar Caixa de Seleção
	private JLabel lblCaixaDeSelecao = new JLabel("Caixa De Seleção");
	private JComboBox<String> cboCaixaDeSelecao = new JComboBox<String>();
	
	//Criar Caixa de Marcação
	private JCheckBox chkCaixaDeMarcacao = new JCheckBox("Caixa de Marcação");
	
	//Criar Botões de alternativa
	private JLabel lblBotoesDeAlternativa = new JLabel("Botões de alternativa");
	private ButtonGroup btgBotoesDeAlternativa = new ButtonGroup();
	private JRadioButton optAlternativa1 = new JRadioButton("Alternativa 1");
	private JRadioButton optAlternativa2 = new JRadioButton("Alternativa 2");
	private JRadioButton optAlternativa3 = new JRadioButton("Alternativa 3");
	
	//Criar área de selação
	private JLabel lblAreaDeSelecao = new JLabel("Área de seleção");
	private JList<String> lstAreaDeSelecao = new JList<String>();
	DefaultListModel<String> dlmAreaDeSelecao = new DefaultListModel<String>();
	JScrollPane jspAreaDeSelecao = new JScrollPane(lstAreaDeSelecao);

	// Método principal de construção da classe -- Quarto passo
	public static void main(String[] args) {
		new Visao().setVisible(true);
	}
	
	//Método construtor da classe
	public Visao() {
		//Configuração da janela -- Quinto passo
		setTitle("Janela de Modelo de Utilização de Controles Gráficos");
		setSize(800, 600);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLocationRelativeTo(null);
		setLayout(null);
		
		//Configuração do painel/menu -- Sexto passo
		setJMenuBar(barraDeMenu);
		barraDeMenu.add(mnuArquivo);
		barraDeMenu.add(mnuEditar);
		mnuArquivo.add(mniNovo);
		mnuArquivo.add(mniAbrir);
		mnuArquivo.addSeparator();
		mnuArquivo.add(mniSair);
		mnuEditar.add(mniCopiar);
		mnuEditar.add(mniColar);
		
		mniNovo.addActionListener(new ControladorNovo());
		mniAbrir.addActionListener(new ControladorAbrir());
		mniSair.addActionListener(new ControladorSair());
		mniCopiar.addActionListener(new ControladorCopiar());
		mniColar.addActionListener(new ControladorColar());
		
		//Configuração Botão
		btnSair.setBounds(675, 490, 100, 30);
		add(btnSair);
		btnSair.addActionListener(new ControladorSair());
		
		//Configuração caixa de texto
		lblCaixaDeTexto.setBounds(10, 10, 200, 20);
		add(lblCaixaDeTexto);
		txtCaixaDeTexto.setBounds(10, 30, 400, 20);
		add(txtCaixaDeTexto);
		
		//Configuração Área de texto
		lblAreaDeTexto.setBounds(10, 60, 200, 20);
		add(lblAreaDeTexto);
		jspAreaDeTexto.setBounds(10, 80, 765, 150);
		add(jspAreaDeTexto);
		txtAreaDeTexto.setLineWrap(true);
		
		// Configuração Caixa de Seleção
		lblCaixaDeSelecao.setBounds(10, 240, 200, 20);
		add(lblCaixaDeSelecao);
		cboCaixaDeSelecao.setBounds(10, 260, 200, 20);
		add(cboCaixaDeSelecao);
		cboCaixaDeSelecao.addItem("--- Selecione a Opção ---");
		cboCaixaDeSelecao.addItem("Opção 1");
		cboCaixaDeSelecao.addItem("Opção 2");
		cboCaixaDeSelecao.addItem("Opção 3");
		cboCaixaDeSelecao.addItem("Opção 4");
		cboCaixaDeSelecao.addItem("Opção 5");
		
		//Configuração Caixa de marcação
		chkCaixaDeMarcacao.setBounds(10, 290, 200, 20);
		add(chkCaixaDeMarcacao);
		
		//Configuração de botões de alternativa
		lblBotoesDeAlternativa.setBounds(10, 320, 200, 20);
		add(lblBotoesDeAlternativa);
		optAlternativa1.setBounds(10, 340, 100, 20);
		add(optAlternativa1);
		optAlternativa2.setBounds(110, 340, 100, 20);
		add(optAlternativa2);
		optAlternativa3.setBounds(210,340, 100, 20);
		add(optAlternativa3);
		btgBotoesDeAlternativa.add(optAlternativa1);
		btgBotoesDeAlternativa.add(optAlternativa2);
		btgBotoesDeAlternativa.add(optAlternativa3);
		optAlternativa1.setSelected(true);
		
		//Configuração área de selação
		lblAreaDeSelecao.setBounds(10, 370, 200, 20);
		add(lblAreaDeSelecao);
		jspAreaDeSelecao.setBounds(10, 390, 765, 100);
		add(jspAreaDeSelecao);
		lstAreaDeSelecao.setModel(dlmAreaDeSelecao);
		dlmAreaDeSelecao.addElement("Opção 1");
		dlmAreaDeSelecao.addElement("Opção 2");
		dlmAreaDeSelecao.addElement("Opção 3");
		dlmAreaDeSelecao.addElement("Opção 4");
		dlmAreaDeSelecao.addElement("Opção 5");
		dlmAreaDeSelecao.addElement("Opção 6");

	}
	
}
